<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app
   xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5" metadata-complete="true">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>appstats</filter-name>
        <filter-class>com.google.appengine.tools.appstats.AppstatsFilter</filter-class>
        <init-param>
            <param-name>logMessage</param-name>
            <param-value>Appstats available: http://twetailer.appspot.com/_admin/stats/details?time={ID}</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>appstats</filter-name>
        <url-pattern>/API/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>appstats</filter-name>
        <url-pattern>/console/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>appstats</filter-name>
        <url-pattern>/directory/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>openidfilter</filter-name>
        <filter-class>com.dyuproject.openid.OpenIdServletFilter</filter-class>
        <load-on-startup>1</load-on-startup>
        <init-param>
            <param-name>forwardUri</param-name>
            <param-value>/_includes/login.jsp</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>openidfilter</filter-name>
        <url-pattern>/_admin/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>openidfilter</filter-name>
        <url-pattern>/console/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>openidfilter</filter-name>
        <url-pattern>@rwa.servletApiPath@/</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>twetailer.j2ee.LoginServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>twetailer.j2ee.LogoutServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>maezel</servlet-name>
        <servlet-class>twetailer.j2ee.MaezelServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>maezel</servlet-name>
        <url-pattern>@rwa.servletApiPath@/maezel/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>directory</servlet-name>
        <servlet-class>twetailer.j2ee.DirectoryServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>directory</servlet-name>
        <url-pattern>/directory/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>consumer</servlet-name>
        <servlet-class>twetailer.j2ee.restlet.ConsumerRestlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>consumer</servlet-name>
        <url-pattern>@rwa.servletApiPath@/Consumer/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>demand</servlet-name>
        <servlet-class>twetailer.j2ee.restlet.DemandRestlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>demand</servlet-name>
        <url-pattern>@rwa.servletApiPath@/Demand/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>location</servlet-name>
        <servlet-class>twetailer.j2ee.restlet.LocationRestlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>location</servlet-name>
        <url-pattern>@rwa.servletApiPath@/Location/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>payment</servlet-name>
        <servlet-class>twetailer.j2ee.restlet.PaymentRestlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>payment</servlet-name>
        <url-pattern>@rwa.servletApiPath@/Payment/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>proposal</servlet-name>
        <servlet-class>twetailer.j2ee.restlet.ProposalRestlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>proposal</servlet-name>
        <url-pattern>@rwa.servletApiPath@/Proposal/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>saleassociate</servlet-name>
        <servlet-class>twetailer.j2ee.restlet.SaleAssociateRestlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>saleassociate</servlet-name>
        <url-pattern>@rwa.servletApiPath@/SaleAssociate/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>seed</servlet-name>
        <servlet-class>twetailer.j2ee.restlet.SeedRestlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>seed</servlet-name>
        <url-pattern>@rwa.servletApiPath@/Seed/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>store</servlet-name>
        <servlet-class>twetailer.j2ee.restlet.StoreRestlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>store</servlet-name>
        <url-pattern>@rwa.servletApiPath@/Store/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>jabberresponder</servlet-name>
        <servlet-class>twetailer.j2ee.JabberResponderServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>jabberresponder</servlet-name>
        <url-pattern>/_ah/xmpp/message/chat/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>catchallhandler</servlet-name>
        <servlet-class>twetailer.j2ee.CatchAllMailHandlerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>catchallhandler</servlet-name>
        <url-pattern>/_ah/mail/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>waveresponder</servlet-name>
        <servlet-class>twetailer.j2ee.WaveResponderServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>waveresponder</servlet-name>
        <url-pattern>/_wave/robot/jsonrpc</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>waveprofile</servlet-name>
        <servlet-class>twetailer.j2ee.WaveProfileServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>waveprofile</servlet-name>
        <url-pattern>/_wave/robot/profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>appstats</servlet-name>
        <servlet-class>com.google.appengine.tools.appstats.AppstatsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>appstats</servlet-name>
        <url-pattern>/_admin/stats/*</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>403</error-code>
        <location>/404.html</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/404.html</location>
    </error-page>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Administrative tools</web-resource-name>
            <url-pattern>/_admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Administrative tools</web-resource-name>
            <url-pattern>/_ah/xmpp/message/chat/</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Administrative tools</web-resource-name>
            <url-pattern>/_ah/mail/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

</web-app>
